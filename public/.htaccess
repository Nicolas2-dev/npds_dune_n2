# =========================================
# Prévention vulnérabilité httpoxy
# =========================================
<IfModule mod_headers.c>
    RequestHeader unset Proxy
</IfModule>

# =========================================
# Options de négociation
# =========================================
<IfModule mod_negotiation.c>
    Options -MultiViews
</IfModule>

# =========================================
# Réécriture d'URL
# =========================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # -----------------------------------------
    # Redirige vers HTTPS et supprime www
    # -----------------------------------------
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC,OR]
    RewriteCond %{HTTPS} !=on
    RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [R=301,L]

    # -----------------------------------------
    # Supprime le slash final si ce n'est pas un dossier
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [R=301,L]

    # -----------------------------------------
    # Front Controller pour MVC
    # Toutes les requêtes vers index.php
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # -----------------------------------------
    # Gestion de l'en-tête Authorization (API)
    # -----------------------------------------
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>
